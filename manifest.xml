<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">

  <!-- ===== Core metadata ===== -->
  <Id>01ee961d-5845-4284-adeb-208d395bd4ad</Id>
  <!-- Bumped version to ensure update triggers -->
  <Version>1.0.0.2</Version>
  <ProviderName>Brandywine</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Send to Leads" />
  <Description DefaultValue="Send emails directly to the Quotient integration backend." />
  
  <IconUrl DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-80.png"/>
  <SupportUrl DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/"/>

  <!-- ===== Supported host & requirement set ===== -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- ===== Classic (non-commands) form settings for old Outlook clients ===== -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/index.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions required by this add-in -->
  <!-- UPDATED: Changed from ReadWriteItem to ReadWriteMailbox to support Master Categories (Colors) -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Show add-in on read messages -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <!-- Keep Outlook's built-in entity highlighting -->
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- ===== Add-in commands (ribbon) definition ===== -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- Resources: icons + URL -->
          <FunctionFile resid="Commands.Url" />

          <!-- Command surface -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <!-- Use default tab - CustomTab not supported in Outlook -->
            <OfficeTab id="TabDefault">
              <Group id="msgReadCommandGroup">
                <Label resid="CommandsGroup.Label"/>
                <Control xsi:type="Button" id="msgReadCommandButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.SupertipTitle"/>
                    <Description resid="TaskpaneButton.SupertipText"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-32.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://psyborg-protocols.github.io/outlook-quotient-integration/index.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="CustomTab.Label" DefaultValue="Quotient"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="Quotient Actions"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Send to Quotient"/>
        <bt:String id="TaskpaneButton.SupertipTitle" DefaultValue="Send to Quotient"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="TaskpaneButton.SupertipText" DefaultValue="Send this email to Quotient for processing."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>